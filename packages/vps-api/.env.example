# VPS API Configuration
PORT=3000
HOST=0.0.0.0
DB_PATH=./data/filter.db
API_TOKEN=your-secret-token-here
DEFAULT_FORWARD_TO=your-email@gmail.com
NODE_ENV=development

# Monitoring Scheduler Configuration
# Cron expression for heartbeat checks (default: every 5 minutes)
HEARTBEAT_CRON=*/5 * * * *
# Cron expression for data cleanup (default: daily at 3 AM)
CLEANUP_CRON=0 3 * * *
# Hours to retain hit logs (default: 72, range: 48-72)
HIT_LOG_RETENTION_HOURS=72
# Days to retain alerts (default: 90, range: 30-90)
ALERT_RETENTION_DAYS=90
# Whether to run heartbeat immediately on start (default: false)
RUN_HEARTBEAT_ON_START=false
