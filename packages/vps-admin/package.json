{
  "name": "@email-filter/vps-admin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node -e \"const fs=require('fs');const p='dist/db';if(!fs.existsSync(p))fs.mkdirSync(p,{recursive:true});fs.copyFileSync('src/db/schema.sql',p+'/schema.sql')\"",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@email-filter/shared": "workspace:*",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.1",
    "@fastify/cookie": "^9.2.0",
    "@fastify/static": "^6.12.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "fast-check": "^3.14.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
